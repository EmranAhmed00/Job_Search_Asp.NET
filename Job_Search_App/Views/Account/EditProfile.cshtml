@model User

@{
    ViewBag.Title = "User Profile"; 
    Layout = "_Layout";
}

<div class="col-lg-6 offset-3">
    <div class="box">
        <h3 class="heading">Edit Profile</h3>

        <form asp-controller="Account" asp-action="UpdateProfile" method="post">

            @Html.ValidationSummary()
            @Html.AntiForgeryToken()
            <div class="form-group">
                <div id="welcome" style="font-size:30px;">
                    <div class="form-group">

                        @Html.LabelFor(c => c.FirstName, "First Name")
                        @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
                    </div>


                    <div class="form-group">
                        @Html.LabelFor(c => c.LastName, "Last Name")
                        @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
                    </div>


                    <div class="form-group">
                        <label>Gender</label>
                        <br>
                        <div class="form-check form-check-inline">
                            @Html.RadioButtonFor(x => x.Gender, "Male", new { @class = "form-check-input", id = "male", @checked = "checked" })
                            @Html.LabelFor(x => x.Gender, "Male", new { @class = "form-check-label" })
                        </div>
                        <div class="form-check form-check-inline">
                            @Html.RadioButtonFor(x => x.Gender, "Female", new { @class = "form-check-input", id = "female" })
                              @Html.LabelFor(x => x.Gender, "Female", new { @class = "form-check-label" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(c => c.Streetaddress, "Address")
                        @Html.TextBoxFor(m => m.Streetaddress, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(c => c.City, "City")
                        @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(c => c.Country, "Country")
                        @Html.TextBoxFor(m => m.Country, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(c => c.Telephonenumber, "Phone Number")
                        @Html.TextBoxFor(m => m.Telephonenumber, new { @class = "form-control" })
                    </div>

                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-outline-white-primary">
                    <i class="fa fa-signing"></i> Update
                </button>
            </div>
        </form>
    </div>
</div>